import mongoose from 'mongoose';

const bookCacheSchema = new mongoose.Schema({
  bookId: { type: Number, required: true, unique: true },
  title: { type: String, required: true },
  isbn: { type: String },
  price: { type: Number },
  publisher: { type: String },
  category: { type: String },
  stock: { type: Number, default: 0 },
  salesCount: { type: Number, default: 0 },
  lastUpdated: { type: Date, default: Date.now }
}, {
  timestamps: true
});

// √çndices
bookCacheSchema.index({ bookId: 1 });
bookCacheSchema.index({ title: 'text' });
bookCacheSchema.index({ salesCount: -1 });

export default mongoose.model('BookCache', bookCacheSchema);